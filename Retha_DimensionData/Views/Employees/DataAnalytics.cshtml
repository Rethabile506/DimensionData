@model IEnumerable<Employee>
@{
    ViewData["Title"] = "DataAnalytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<canvas id="myChart" width="200" height="200"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Total Records', 'Research EMp', 'Sales Emp', 'Females', 'Males', ''],
            datasets: [{
                label: 'Employee Stats',
                data: [@Model.Count(),@Model.Where(x => x.Department== "Research & Development").Count(), @Model.Where(x => x.Department== "Sales").Count(), @Model.Where(x => x.Gender =="Female").Count(), @Model.Where(x => x.Gender =="Male").Count(),0],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>